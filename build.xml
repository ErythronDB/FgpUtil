<project name="FgpUtil" default="Installation" basedir=".">


  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooo  Installation  oooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->

  <target name="FgpUtil-Installation" depends="FgpUtil-MavenInstallation,
                                               FgpUtil/Util-Installation,
                                               FgpUtil/AccountDB-Installation,
                                               FgpUtil/Server-Installation">
    <ant target="defaultProjectInstall">
      <property name="project" value="FgpUtil"/>
    </ant>
  </target>

  <target name="FgpUtil-MavenInstallation">
    <ant target="mavenBuildProject">
      <property name="project" value="FgpUtil"/>
    </ant>
    <property name="alreadyBuilt" value="true"/>
  </target>

  <!-- oooooooooooooooooo  Installation Postprocess  ooooooooooooooooooooo -->

  <target name="FgpUtil-Installation-postprocess">
    <echo message="Postprocessing the FgpUtil installation"/>

    <replace dir="${targetDir}/bin"
             propertyFile="${targetDir}/config/replacements.prop" >
      <include name="**/*" />
      <replacefilter token="@perl@" property="perl"/>
    </replace>

  </target>

  <!-- ooooooooooooooooooooooo  Install Components  ooooooooooooooooooooooo -->

  <target name="FgpUtil/Util-Installation">

    <ant target="defaultComponentInstall">
      <property name="project" value="FgpUtil"/>
      <property name="component" value="Util"/>
    </ant>

    <!-- post installation process -->
    <!-- use default log4j.properties, if it does not exist -->
    <available file="${targetDir}/config/log4j.properties" property="log4j.config.exist" />
    <available file="${targetDir}/config/log4j.xml" property="log4j.config.exist" />
    <antcall target="copyLog4jConfig" />
  </target>

  <target name="copyLog4jConfig" unless="log4j.config.exist">
    <copy file="${targetDir}/config/log4j.properties.sample" toFile="${targetDir}/config/log4j.properties"/>
  </target>

  <target name="FgpUtil/AccountDB-Installation">
    <ant target="defaultComponentInstall">
      <property name="project" value="FgpUtil"/>
      <property name="component" value="AccountDB"/>
    </ant>
  </target>

  <target name="FgpUtil/Server-Installation">
    <!-- comment until we find how this is breaking WDK
    <ant target="defaultComponentInstall">
      <property name="project" value="FgpUtil"/>
      <property name="component" value="Server"/>
    </ant>
    -->
  </target>

</project>
