{
  "Configuration": {
    "properties": {
      "property": [{
        "name": "standardLogPattern",
        "value" : "[%d{dd/MMM/yyyy|HH:mm:ss}] sid:%-5X{shortSessionId} rid: %4X{requestId} %9cmdc{requestTimer} %15X{ipAddress} - %-5p - %C:%L - %m%n"
      }]
    },
    "Appenders": {
      "appender": [{
        "type": "Console",
        "name": "STDOUT",
        "target": "SYSTEM_OUT",
        "PatternLayout": { "pattern": "${standardLogPattern}" }
      }]
    },
    "Loggers": {
      "logger": [{
        "name": "org.gusdb",
        "level": "debug"
      },{
        "name": "org.eupathdb",
        "level": "debug"
      },{
        "name": "org.apidb",
        "level": "debug"
      },{
        "name": "org.orthomcl",
        "level": "debug"
      }],
      "root" : {
        "level": "warn",
        "AppenderRef": { "ref": "STDOUT" }
      }
    }
  }
}
